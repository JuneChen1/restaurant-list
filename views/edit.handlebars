<div class="my-5 mx-auto" style="width: 50%;">
  <h2>修改餐廳資訊</h2>
  <form action="/restaurants/{{ restaurant._id }}/edit" method="POST" class="mt-3">
    <div class="form-group">
      <label for="name">店名</label>
      <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="{{ restaurant.name }}" value="{{ restaurant.name }}" name="name" required>
    </div>
    <div class="form-group">
      <label for="name_en">英文店名</label>
      <input type="text" class="form-control" id="name_en" placeholder="{{ restaurant.name_en }}" value="{{ restaurant.name_en }}" name="name_en">
    </div>
    <div class="form-group">
      <label for="category">類別</label>
      <input type="text" class="form-control" id="category" placeholder="{{ restaurant.category }}" value="{{ restaurant.category }}" name="category">
    </div>
    <div class="form-group">
      <label for="image">圖片連結</label>
      <input type="text" class="form-control" id="image" placeholder="{{ restaurant.image }}" value="{{ restaurant.image }}" name="image">
    </div>
    <div class="form-group">
      <label for="location">地址</label>
      <input type="text" class="form-control" id="location" placeholder="{{ restaurant.location }}"  value="{{ restaurant.location }}" name="location">
    </div>
    <div class="form-group">
      <label for="phone">電話</label>
      <input type="text" class="form-control" id="phone" placeholder="{{ restaurant.phone }}" value="{{ restaurant.phone }}" name="phone">
    </div>
    <div class="form-group">
      <label for="google_map">Google地圖連結</label>
      <input type="text" class="form-control" id="google_map" placeholder="{{ restaurant.google_map }}" value="{{ restaurant.google_map }}"
        name="google_map">
    </div>
    <div class="form-group">
      <label for="rating">評分</label>
      <input type="number" min="0" step="0.1" max="10" class="form-control" id="rating" placeholder="{{ restaurant.rating }}" value="{{ restaurant.rating }}" name="rating">
    </div>
    <div>
      <label for="description">描述</label>
      <textarea class="form-control" aria-label="With textarea" id="description" placeholder="{{ restaurant.description }}"
        name="description">{{ restaurant.description }}</textarea>
    </div>
    <button type="submit" class="btn btn-info mt-3">儲存</button>
  </form>
</div>