<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer" style="max-width: 850px;">
    <div class="search-bar-inner mb-3">
      <h4 class="mb-2">尋找餐廳：</h4>
      <form action="/search">
        <div class="d-flex justify-content-between">
          <div class="input-group" style="width: 48%;">
            <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>  
          
          <div style="width: 48%;">
            <select id="sort" class="form-control" name="sort" onchange="submit()">
              <option style="display: none;">{{#if sort}} {{sort}} {{else}} 排序 {{/if}}</option>
              <option value="name_asc">A -> Z</option>
              <option value="name_desc">Z -> A</option>
              <option value="category_asc">類別</option>
              <option value="location_asc">地區</option>
            </select>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <a href="/restaurants/new"><button type="button" class="btn btn-outline-info mb-3">新增餐廳</button></a>
      <div class="card-columns">
      {{#each restaurant}}
        <div class="card">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}"
                alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
            </div>
          </a>
          <div class="d-flex justify-content-end align-items-center pb-2">
            <a href="/restaurants/{{this._id}}/edit" class="mx-2">編輯</a>
            <a href="/restaurants/{{this._id}}" class="mx-2">詳細資訊</a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
              <button class="btn btn-danger mx-2">刪除</button>
            </form>
          </div>
        </div>
      {{/each}}
      </div>
    </div>
  </div>
</div>