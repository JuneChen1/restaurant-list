<div class="row my-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body m-auto" style="max-width: 500px;">
      <h1 class="text-center mt-3">Login</h1>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="form-group mt-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-4 mb-2" style="width: 100%;">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block" style="width: 100%;">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>